div.blog(ng-controller="BlogCtrl" ng-init="init()")
	div.row
		div.col-lg-12.section-header
			h1 Blog
			p
				| This is where I'll share my thoughts, my discoveries or anything that I wanted to share with you.
	hr
	div.articles
		div.article(ng-repeat="(key, article) in blog.articles" ng-class="{true:'col-lg-12', false:'col-lg-4'}[$index==0]")
			div.title
				h3(ng-bind-html="article.title"), 
					small by {{ article.author}} - {{ article.created_at }}
			div.body(ng-bind-html="article.body")
			div.tags
				span.label.label-default.label-info(ng-repeat="(key, tag) in article.tags") {{ tag }}
	div.load(ng-switch , on="blog.no_more_article")
		button.btn.btn-default(ng-click="search(last,4)" ng-switch-when="false")
		div.alert.alert-warning.alert-dismissable(ng-switch-when="true")
			button.close(type="button" data-dismiss="alert" aria-hidden="true") &times;
			p No more article to load.



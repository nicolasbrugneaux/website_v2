include head
div.main-content
		div.container
			div.col-lg-4
			div.login.col-lg-4
				form(class="form-horizontal" name="login-form" method="post")
						legend Login

						div.form-group
							label.sr-only(for="login") Login
							input(type="text", name="login", class="form-control", required, placeholder="Enter your login")

						div.form-group
							label.sr-only(for="password") Password
							input(type="password", name="password", class="form-control",required, placeholder="Enter your password")

						div.form-actions
							input(type="submit",value="Login", class="btn btn-success")
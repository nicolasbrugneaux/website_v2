div.navigation
	div.navbar.navbar-default.navbar-static-top
		div.container
			div.navbar-header
				button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="#") {{ data.info.name }}
			div.navbar-collapse.collapse.navbar-responsive-collapse
				ul.nav.navbar-nav
					li(ng-repeat="item in data.links.navigation" ng-class="{ active: item.link==data.location.path()}")
						a(href="{{ item.link }}") {{ item.name }}
